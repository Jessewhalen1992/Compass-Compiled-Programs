<UserControl x:Class="Compass.UI.DrillManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="900"
             d:DesignHeight="560">
    <Border Background="#FFF5F6FA" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,16">
                <TextBlock Text="Drill Properties"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF222B45" />
                <TextBlock Text="Manage drill labels, apply templates, and quickly update the full grid."
                           FontSize="12"
                           Foreground="#FF6B7280"
                           Margin="0,4,0,0" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <Border Background="White"
                                BorderBrush="#FFE3E8EF"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Grid setup"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#FF111827" />
                                <TextBlock Text="Choose how many drills you need in the grid."
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           Margin="0,4,0,12" />
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Drill count"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"
                                               Foreground="#FF374151" />
                                    <ComboBox Width="120"
                                              ItemsSource="{Binding DrillCountOptions}"
                                              SelectedItem="{Binding DrillCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="White"
                                BorderBrush="#FFE3E8EF"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Selected drill"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#FF111827" />
                                <TextBlock Text="Pick a drill to edit, update its name, or clear it."
                                           FontSize="12"
                                           Foreground="#FF6B7280"
                                           Margin="0,4,0,12" />
                                <ComboBox ItemsSource="{Binding Drills}"
                                          DisplayMemberPath="DisplayLabel"
                                          SelectedValuePath="Index"
                                          SelectedValue="{Binding SelectedDrillIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,0,8" />
                                <TextBox Text="{Binding SelectedDrillName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,12" />
                                <UniformGrid Columns="2" HorizontalAlignment="Right" Margin="0">
                                    <Button Content="Set"
                                            Margin="0,0,8,0"
                                            Padding="12,4"
                                            MinWidth="80"
                                            Command="{Binding SetSelectedCommand}" />
                                    <Button Content="Clear"
                                            Padding="12,4"
                                            MinWidth="80"
                                            Command="{Binding ClearSelectedCommand}" />
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                    <Border Background="White"
                            BorderBrush="#FFE3E8EF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Bulk naming"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#FF111827" />
                            <TextBlock Text="Apply a shared name or clear every drill at once."
                                       FontSize="12"
                                       Foreground="#FF6B7280"
                                       Margin="0,4,0,12" />
                            <TextBox Text="{Binding SetAllName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12"
                                     ToolTip="Name that will be assigned to every drill when you apply the change." />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Apply to all"
                                        Padding="12,4"
                                        MinWidth="110"
                                        Command="{Binding SetAllCommand}" />
                                <Button Content="Clear all"
                                        Padding="12,4"
                                        MinWidth="110"
                                        Margin="8,0,0,0"
                                        Command="{Binding ClearAllCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="White"
                            BorderBrush="#FFE3E8EF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Corner template"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#FF111827" />
                            <TextBlock Text="Quickly populate the four corner drills with standard labels."
                                       FontSize="12"
                                       Foreground="#FF6B7280"
                                       Margin="0,4,0,12" />
                            <Grid Margin="0,0,0,12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Top left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,0,12,0" />
                                <TextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Text="{Binding CornerTopLeft, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="1"
                                           Text="Top right"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,8,12,0" />
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Margin="0,8,0,0"
                                         Text="{Binding CornerTopRight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="2"
                                           Text="Bottom right"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,8,12,0" />
                                <TextBox Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="0,8,0,0"
                                         Text="{Binding CornerBottomRight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="3"
                                           Text="Bottom left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,8,12,0" />
                                <TextBox Grid.Row="3"
                                         Grid.Column="1"
                                         Margin="0,8,0,0"
                                         Text="{Binding CornerBottomLeft, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Button Content="Apply corner template"
                                    Padding="12,4"
                                    HorizontalAlignment="Right"
                                    Command="{Binding ApplyCornersCommand}" />
                        </StackPanel>
                    </Border>

                    <Border Background="White"
                            BorderBrush="#FFE3E8EF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Auto-fill empty drills"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#FF111827" />
                            <TextBlock Text="Generate sequential names for any blank drills."
                                       FontSize="12"
                                       Foreground="#FF6B7280"
                                       Margin="0,4,0,12" />
                            <Grid Margin="0,0,0,12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="Prefix"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,0,12,0" />
                                <TextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Text="{Binding AutoFillPrefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Grid.Row="1"
                                           Text="Start number"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,8,12,0" />
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Margin="0,8,0,0"
                                         Text="{Binding AutoFillStartIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Button Content="Fill empty drills"
                                    Padding="12,4"
                                    HorizontalAlignment="Right"
                                    Command="{Binding AutoFillCommand}" />
                        </StackPanel>
                    </Border>

                    <Border Background="White"
                            BorderBrush="#FFE3E8EF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Import or export list"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#FF111827" />
                            <TextBlock Text="Paste a delimited list of drill names or copy the current configuration."
                                       FontSize="12"
                                       Foreground="#FF6B7280"
                                       Margin="0,4,0,12" />
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Separator"
                                           VerticalAlignment="Center"
                                           Foreground="#FF374151"
                                           Margin="0,0,12,0" />
                                <TextBox Width="48"
                                         HorizontalContentAlignment="Center"
                                         Text="{Binding DelimitedSeparator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <TextBox AcceptsReturn="True"
                                     Height="120"
                                     TextWrapping="Wrap"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Text="{Binding DelimitedNames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,12,0,0">
                                <Button Content="Apply list"
                                        Padding="12,4"
                                        MinWidth="100"
                                        Command="{Binding ApplyDelimitedCommand}" />
                                <Button Content="Copy current"
                                        Padding="12,4"
                                        MinWidth="110"
                                        Margin="8,0,0,0"
                                        Command="{Binding CopyDelimitedCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Column="2"
                    Background="White"
                    BorderBrush="#FFE3E8EF"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="140" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Drill label"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#FF4B5563" />
                        <TextBlock Grid.Column="1"
                                   Text="Drill name"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#FF4B5563" />
                        <TextBlock Grid.Column="2"
                                   Text="Actions"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#FF4B5563"
                                   HorizontalAlignment="Right" />
                    </Grid>

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Drills}"
                              SelectedValuePath="Index"
                              SelectedValue="{Binding SelectedDrillIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              BorderThickness="0">
                        <ListView.Resources>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </ListView.Resources>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0,0,0,8" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FFE3E8EF"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="10"
                                        Background="#FFF9FAFB">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="140" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding DisplayLabel}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF111827" />
                                        <TextBox Grid.Column="1"
                                                 Margin="8,0"
                                                 VerticalAlignment="Center"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <Button Content="Set"
                                                    Padding="10,3"
                                                    MinWidth="56"
                                                    Command="{Binding DataContext.SetSelectedCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding Index}" />
                                            <Button Content="Reset"
                                                    Padding="10,3"
                                                    MinWidth="56"
                                                    Margin="8,0,0,0"
                                                    Command="{Binding DataContext.ClearSelectedCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding Index}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    </Border>
</UserControl>
